<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!--
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    -->


    <!-- Row 1 -->

    <TableRow
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/search_row1_text"
            android:text="@string/search_row1_text" />

        <Spinner
            android:id="@+id/search_spinner_categories"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:entries="@array/search_array_categories"
            android:prompt="@string/search_prompt_categories" />
    </TableRow>

    <!-- Row 2 -->

    <TableRow
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/search_row2_text"
            android:text="@string/search_row2_text" />

        <Spinner
            android:id="@+id/search_spinner_rating_value"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:prompt="@string/search_prompt_rating_value" />
        
        <!--  <kankan.wheel.widget.WheelView
            android:id="@+id/search_wheel_rating_value"
            android:layout_width="60dp"
            android:layout_height="120dp" />-->
    </TableRow>

    <!-- Row 3 -->

    <TableRow
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/search_row3_text"
            android:text="@string/search_row3_text" />

        <Spinner
            android:id="@+id/search_spinner_rating_count"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:prompt="@string/search_prompt_rating_count" />
    </TableRow>

    <!-- Row 4 -->

    <TableRow
        android:paddingBottom="20dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/search_row4_text"
            android:text="@string/search_row4_text" />

        <Spinner
            android:id="@+id/search_spinner_installs_min"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:prompt="@string/search_prompt_installs_min" />
    </TableRow>

    <View
        android:layout_height="1dp"
        android:background="#339900" />

    <TableRow
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingTop="15dp" >

        <Button
            android:id="@+id/search_button_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:text="@string/search_button_search" />
    </TableRow>
    <!-- </LinearLayout> -->

</TableLayout>