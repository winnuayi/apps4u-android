<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Row 1 -->

    <TableRow
        android:id="@+id/home_row1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <!-- Column 1 -->

        <TextView
            android:id="@+id/home_row1_column1"
            android:layout_width="130dip"
            android:layout_height="130dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/home_border1"
            android:gravity="bottom"
            android:padding="10dip"
            android:text="@string/home_row1_column1"
            android:textColor="#FFFFFF"
            android:textSize="7pt"
            android:textStyle="bold" />

        <!-- Column 2 -->

        <TextView
            android:id="@+id/home_row1_column2"
            android:layout_width="130dip"
            android:layout_height="130dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/home_border2"
            android:gravity="bottom"
            android:padding="10dip"
            android:text="@string/home_row1_column2"
            android:textColor="#339900"
            android:textSize="7pt"
            android:textStyle="bold" />
    </TableRow>

    <!-- Row 2 -->

    <TableRow
        android:id="@+id/home_row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp" >

        <!-- Column 1 -->

        <TextView
            android:id="@+id/home_row2_column1"
            android:layout_width="130dip"
            android:layout_height="130dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/home_border3"
            android:gravity="bottom"
            android:padding="10dip"
            android:text="@string/home_row2_column1"
            android:textColor="#339900"
            android:textSize="7pt"
            android:textStyle="bold" />

        <!-- Column 2 -->

        <TextView
            android:id="@+id/home_row2_column2"
            android:layout_width="130dip"
            android:layout_height="130dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/home_border4"
            android:gravity="bottom"
            android:padding="10dip"
            android:text="@string/home_row2_column2"
            android:textColor="#FFFFFF"
            android:textSize="7pt"
            android:textStyle="bold" />
    </TableRow>

</TableLayout>